<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:ChartTest"
    xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/charts" x:Class="ChartTest.MainWindow"
    mc:Ignorable="d"
    Title="MainWindow" Height="600" Width="800" Loaded="Window_Loaded">
    <Grid Name="Grid">
    <Grid.RowDefinitions>
        <RowDefinition Height="*"></RowDefinition>
        <RowDefinition Height="Auto"></RowDefinition>
    </Grid.RowDefinitions>
        <dxc:ChartControl Grid.Row="0">
            <dxc:XYDiagram2D Name="diagram" />
        </dxc:ChartControl>
        <Button Name="ButtonClustering" Grid.Row="1" Content="Clustering" Click="ButtonClustering_Click"/>
    </Grid>
</Window>